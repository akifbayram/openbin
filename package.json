{
  "name": "openbin",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "cd server && npm run dev",
    "dev:all": "npx concurrently -n api,web -c blue,green \"npm run dev:server\" \"npm run dev\"",
    "build": "tsc && cp server/openapi.yaml public/api-docs/openapi.yaml && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "npx biome check src/",
    "check": "tsc --noEmit && cd server && npx tsc --noEmit"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "html5-qrcode": "^2.3.8",
    "jspdf": "^4.2.0",
    "lucide-react": "^0.563.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.3",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.1",
    "happy-dom": "^20.5.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  }
}
